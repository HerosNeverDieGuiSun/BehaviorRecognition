page {
  height: 100%;
}

.tab-container {
  width: 100%;
  border-bottom: 2rpx solid #777;
  border-top: 2rpx solid #777;
  line-height: 80rpx;
  text-align: center;
  white-space: nowrap;
  box-shadow: 2px 2px 2px #eee;
  background-color: rgb(254, 254, 254);
}

.tab-container .tab-item {
  display: inline-block;
  width: 150rpx;
  font-size: 30rpx;
  color: #aaa;
}

.tab-container .tab-item.on {
  border-bottom: 5rpx solid #da7c0c;
  color: #da7c0c;
}

.main-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info-graph {
  width: 100%;
  height: 600rpx;
}

.script {
  color: #777;
  font-size: 30rpx;
  position: relative;
  left: 50rpx;
  top: 50rpx
}